{
  "name": "libremotesensor",
  "version": "1.0.0",
  "description": "Library to communicate with Remote Sensors",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/gulp --harmony test",
    "travis-ci": "./node_modules/.bin/gulp --harmony testCoverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/familab/libRemoteSensor.git"
  },
  "keywords": [
    "arduino",
    "udp"
  ],
  "author": "Lance Hudson <lance@lancehudson.com> (http://lancehudson.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/familab/libRemoteSensor/issues"
  },
  "homepage": "https://github.com/familab/libRemoteSensor#readme",
  "dependencies": {
    "debug": "^2.2.0",
    "gulp": "^3.9.0"
  },
  "jscsConfig": {
    "preset": "node-style-guide",
    "esnext": true
  },
  "jshintConfig": {
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "freeze": true,
    "indent": 2,
    "newcap": true,
    "quotmark": "single",
    "maxdepth": 3,
    "maxstatements": 15,
    "maxlen": 80,
    "eqnull": true,
    "funcscope": true,
    "node": true,
    "esnext": true,
    "noyield": true,
    "mocha": true
  },
  "eslintConfig": {
      "env": {
        "node": true,
        "mocha": true,
        "es6": true
      },
      "rules": {
        "comma-dangle": [1, "always-multiline"]
      }
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "codeclimate-test-reporter": "^0.1.1",
    "gulp-istanbul": "^0.10.3",
    "gulp-mocha": "^2.2.0"
  }
}
